@model IEnumerable<AllAuthorsViewModel>
@{
    ViewBag.Title = "All Authors";
}

<h2 class="text-center">@ViewBag.Title</h2>
<hr />

@{
    for (char c = 'A'; c <= 'Z'; c++)
    {
        <div class="list-group">
            @{
                if(Model.Any(a => a.Name.StartsWith(c)))
                {
                    <ul class="list-group">
                        <li class="list-group-item active">@c</li>
                        @{
                            foreach (AllAuthorsViewModel author in Model.Where(a => a.Name.StartsWith(c)))
                            {
                                <li class="list-group-item">
                                    <a asp-controller="Author" asp-action="Details"
                                       asp-route-id="@author.Id">@author.Name</a>
                                </li>
                            }
                        }
                    </ul>
                }
            }
        </div>
    }
}